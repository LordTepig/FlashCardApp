<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateFlashCardFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/question"
        android:textStyle="bold"
        android:layout_marginStart="18dp"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/questionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:autofillHints="@string/question"
        android:hint="@string/question"
        android:paddingStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/question"
        app:layout_constraintStart_toStartOf="@id/question"
        />

    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/answer"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginStart="18dp"
        app:layout_constraintTop_toBottomOf="@id/questionEditText"
        app:layout_constraintStart_toStartOf="@id/question"/>

    <EditText
        android:id="@+id/answerEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/answer"
        android:autofillHints="@string/answer"
        android:inputType="text"
        android:paddingStart="16dp"
        app:layout_constraintStart_toStartOf="@id/questionEditText"
        app:layout_constraintTop_toBottomOf="@id/answer"

        />

</androidx.constraintlayout.widget.ConstraintLayout>