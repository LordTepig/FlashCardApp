<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/OrangeAndBlueTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateMultipleChoiceFragment">


    <TextView
        android:id="@+id/multipleChoiceQuestionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        style="@style/OrangeAndBlueTheme"
        android:layout_marginStart="12dp"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/multipleChoiceQuestionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:autofillHints="@string/question"
        android:hint="@string/your_question"
        android:paddingStart="24dp"
        android:textColorHint="#2943FF"
        app:layout_constraintStart_toStartOf="@id/multipleChoiceQuestionTextView"
        app:layout_constraintTop_toBottomOf="@id/multipleChoiceQuestionTextView"
        />

    <TextView
        android:id="@+id/multipleChoiceAnswerOneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/answer_a"
        android:textStyle="bold"
        style="@style/OrangeAndBlueTheme"
        android:layout_marginStart="12dp"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@id/multipleChoiceQuestionEditText"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/multipleChoiceAnswerOneEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:autofillHints="@string/question"
        android:hint="@string/your_answer"
        android:textColorHint="#2943FF"
        android:paddingStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/multipleChoiceAnswerOneTextView"
        app:layout_constraintStart_toStartOf="@id/multipleChoiceAnswerOneTextView"
        />

    <TextView
        android:id="@+id/multipleChoiceAnswerTwoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/answer_b"
        android:textStyle="bold"
        style="@style/OrangeAndBlueTheme"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@id/multipleChoiceAnswerOneEditText"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/multipleChoiceQuestionTwoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:autofillHints="@string/question"
        android:hint="@string/your_answer"
        android:paddingStart="24dp"
        android:textColorHint="#2943FF"
        app:layout_constraintStart_toStartOf="@id/multipleChoiceAnswerTwoTextView"
        app:layout_constraintTop_toBottomOf="@id/multipleChoiceAnswerTwoTextView"
        />

    <TextView
        android:id="@+id/multipleChoiceAnswerThreeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/answer_c"
        android:textStyle="bold"
        style="@style/OrangeAndBlueTheme"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@id/multipleChoiceQuestionTwoEditText"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/multipleChoiceQuestionThreeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:autofillHints="@string/question"
        android:hint="@string/your_answer"
        android:paddingStart="24dp"
        android:textColorHint="#2943FF"
        app:layout_constraintStart_toStartOf="@id/multipleChoiceAnswerThreeTextView"
        app:layout_constraintTop_toBottomOf="@id/multipleChoiceAnswerThreeTextView"
        />

    <TextView
        android:id="@+id/multipleChoiceAnswerFourTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/answer_d"
        android:textStyle="bold"
        style="@style/OrangeAndBlueTheme"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@id/multipleChoiceQuestionThreeEditText"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/multipleChoiceQuestionFourEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:autofillHints="@string/question"
        android:hint="@string/your_answer"
        android:paddingStart="24dp"
        android:textColorHint="#2943FF"
        app:layout_constraintStart_toStartOf="@id/multipleChoiceAnswerFourTextView"
        app:layout_constraintTop_toBottomOf="@id/multipleChoiceAnswerFourTextView"
        />
    <TextView
        android:id="@+id/correctAnswerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/correct_answer"
        android:textStyle="bold"
        android:textSize="32sp"
        style="@style/OrangeAndBlueTheme"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/multipleChoiceQuestionFourEditText"
        />

    <Spinner
        android:id="@+id/correctAnswerSpinner"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/correctAnswerText"
        app:layout_constraintBottom_toBottomOf="@id/correctAnswerText"
        app:layout_constraintStart_toEndOf="@id/correctAnswerText"
       />
    <Button
        android:id="@+id/addMultipleChoiceCardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_to_cards"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/correctAnswerText"
        />



</androidx.constraintlayout.widget.ConstraintLayout>